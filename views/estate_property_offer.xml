<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Offers">
                <field name="partner_id"/>
                <field name="price"/>
                <field name="state"/>
                <field name="estate_property_id"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Estate Property Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click on the create button to create your first property offer
            </p>
        </field>
    </record>
</odoo>